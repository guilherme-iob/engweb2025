

<script>
    function salvar() { 
        debugger;

        var pessoa = {};
        pessoa.NomeCompleto = $('#nomeCompleto')[0].value;

        $.ajax({
            type: 'POST',
            data: JSON.stringify(pessoa),
            url: '/Home/AddPessoa',
            contentType: 'application/json',
            success: function (data) { 
                if (data.sucesso) {
                    alert('Pessoa Adicionada: ' + data.dados.id + ' ' + data.dados.nomeCompleto);
                }
                else { 
                    alert('Problema: ' + data.mensagem);
                }                
            },
            error: function (err) { 
                debugger;
                alert('Erro: ' + err);
            }
        });
    }
</script>


<h1>Adicionar Pessoa</h1>

<div class="mb-3">
    <label for="nomeCompleto" class="form-label">Nome Completo</label>
    <input class="form-control" id="nomeCompleto">    
</div>

<button type="submit" class="btn btn-primary" onclick="salvar()">Salvar</button>
